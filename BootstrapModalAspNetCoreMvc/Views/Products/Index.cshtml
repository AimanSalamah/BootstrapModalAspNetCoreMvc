@model IEnumerable<BootstrapModalAspNetCoreMvc.Models.Products>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" asp-controller="Products" data-toggle="modal" data-target="#ModalContainer">Create</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-action="Edit" asp-controller="Products" asp-route-id="@item.ID" data-toggle="modal" data-target="#ModalContainer">Edit</a> |
                    <a asp-action="Details" asp-controller="Products" asp-route-id="@item.ID" data-toggle="modal" data-target="#ModalContainer">Details</a> |
                    <a asp-action="Delete" asp-controller="Products" asp-route-id="@item.ID" data-toggle="modal" data-target="#ModalContainer">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
